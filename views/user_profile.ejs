<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/navbar.css">

</head>

<body >
    <header>
        <nav class="navbar navbar-dark bg-dark fixed-top">
            <div class="container-sm d-flex">
                <a class="navbar-brand" href="/">Bookshop</a>
            </div>
        </nav>
    </header>
    <main class="container">
        <form action="POST">
            <div class="row">

                <div class="col mb-3">
                    <label for="filterEmail">Email:</label>
                    <input class="form-control" type="text" id="filterEmail" name="email" value="<%=user.mail%>" placeholder="Email">
                </div>
                <div class="col mb-3">
                    <label for="filterNickname">Nickname:</label>
                    <input class="form-control" type="text" id="filterNickname" name="nickname" value="<%=user.nickname%>"
                        placeholder="Nickname">
                </div>
            </div>
            <div class="row">
                <div class="col mb-3"> <label for="filterName">Name:</label>
                    <input class="form-control" type="text" id="filterName" name="name" value="<%=user.name%>" placeholder="Name">
                </div>
                <div class="col mb-3">
                    <label for="filterSurname">Surname:</label>
                    <input class="form-control" type="text" id="filterSurname" name="surname" value="<%=user.surname%>"
                        placeholder="Surname">
                </div>
            </div>
            <div class="mb-3">
                <label for="filterDate">Registered since:</label>
                <span name="filterDate"><%=user.creation_date%></span>
            </div>
        </form>
    </main>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
</body>

</html>