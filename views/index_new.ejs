<body onload='rememberedSearchtype("<%=searchtype%>")'>
  <header>
    <nav class="navbar navbar-dark bg-dark fixed-top">
      <div class="container-sm d-flex">
        <a class="navbar-brand" href="/">Bookshop</a>
        <form method="post">
          <div class="input-group align-self-stretch">
            <input class="form-control" type="search" name="searchbar" placeholder="search" value="<%=searchbar%>" />
            <button class="btn btn-outline-secondary" type="submit">Search</button>

            <select class="form-select" id="searchtypeSelection" name="searchtype">
              <option value="title">title</option>
              <option value="author">author</option>
              <option value="description">description</option>
            </select>

            <!-- <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
              aria-expanded="false">Category</button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="form-control dropdown-item">Title</a></li>
              <li><a class="form-control dropdown-item">Author</a></li>
              <li><a class="form-control dropdown-item">Description</a></li>
            </ul> -->
          </div>
        </form>
        <% if(role===null){%>
          <button class="btn btn-outline-secondary" id="loginBtn">
            Log in
          </button>
          <%} else {%>
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
              aria-expanded="false">Profile</button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="form-control dropdown-item">Placeholder</a></li>
            </ul>
            <a class="btn btn-outline-secondary" href="/cart">Cart</a>
            <%}%>
              <!-- <button class="btn btn-outline-secondary" id="cartBtn">
                Cart
              </button> -->
      </div>
    </nav>
  </header>
  <main class="container">
    <div class="row">
      <!-- SEARCH FILTERS -->
      <div class="col-md-4 col-lg-3 order-md-1 mb-4">
        <h4 class="mb-2">Genre</h4>
        <!-- GENRES CHECK -->
        <form action="\filter?type=<%=searchtype%>&searchbar=<%=searchbar%>" method="POST">
          <% var checked="" ; %>
            <ul class="list-group list-group-flush mb-3">
              <% for(var i=0; i < genres.length; i++){%>
                <% if(checkedGenres.includes(genres[i].id)) { checked="checked" } else { checked="" }%>
                  <label class="list-group-item">
                    <input class="form-check-input me-1" type="checkbox" value="g-<%=genres[i].id%>"
                      id="genreCheck-<%=genres[i].id%>" name="genrefilter" <%=checked%>>
                    <%=genres[i].genre%>
                  </label>
                  <%}%>
            </ul>

            <!-- EXPANDABLE LIST - TODO -->


            <!-- PUBLISHERS CHECK -->
            <h4 class="mb-2">Publisher</h4>
            <ul class="list-group list-group-flush mb-3">
              <% for(var i=0; i < publishers.length; i++){%>
                <% if(checkedPublishers.includes(publishers[i].id)) { checked="checked" } else { checked="" }%>
                  <label class="list-group-item">
                    <input class="form-check-input me-1" type="checkbox" value="g-<%=publishers[i].id%>"
                      id="genreCheck-<%=publishers[i].id%>" name="genrefilter" <%=checked%>>
                    <%=publishers[i].publisher%>
                  </label>
                  <%}%>
            </ul>

            <!-- price RANGE -->
            <h4 class="mb-2">Price</h4>
            <div class="input-group mb-3">
              <input class="form-control" type="number" id="price_min" name="price_min" placeholder="min" />
              <span class="input-group-text">-</span>
              <input class="form-control" type="number" id="price_max" name="price_max" placeholder="max" />
              <span class="input-group-text">$</span>
            </div>
            <!-- DATE RANGE -->
            <h4 class="mb-2">Publication date</h4>
            <div class="input-group mb-3">
              <input class="form-control" type="number" id="date_min" name="date_min" placeholder="from" />
              <span class="input-group-text">-</span>
              <input class="form-control" type="number" id="date_max" name="date_max" placeholder="to" />
              <span class="input-group-text">y</span>
            </div>
            <!-- <div class="range-slider">
                <input type="text" class="js-range-slider" value="" />
              </div>
              <div class="extra-controls">
                <input type="text" class="js-input-from" value="0" />
                <input type="text" class="js-input-to" value="0" />
              </div> -->
            <!--  -->
            <div class="d-flex justify-content-center">
              <button class="btn btn-outline-secondary" type="submit">Use</button>
            </div>
        </form>
      </div>

      <!-- GRID OF BOOKS -->
      <div class="col-md-8 col-lg-9 order-md-2">
        <% if(books.length==0) {%>
          <div class="message">
            We're sorry. </br>
            No products matching given filters were found.
          </div>
          <%} else {%>
            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4">
              <% for(var i=0; i < books.length; i++){%>
                <div class="col d-flex align-items-stretch">
                  <div class="card">
                    <a href=<%"/book?id=<%=books[i].id%>"><img src="<%=books[i].image_path%>" class="card-img-top"
                        alt="<%=books[i].image_path%>"></a>
                    <div class="card-body">
                      <h6 class="card-title fw-bold">
                        <%=books[i].title%>
                      </h6>
                      <p class="card-subtitle mb-2 text-muted">
                        <%=books[i].author%>
                      </p>
                      <p class="card-text fw-bold">
                        <%=books[i].price%> $
                      </p>
                    </div>

                    <%if(role !='admin' ){%>
                      <form method="post" action="\tocart?type=<%=searchtype%>&searchbar=<%=searchbar%>">
                        <div class="card-footer d-flex align-items-stretch justify-content-center">
                          <button type="submit" name="cartBtn" value="<%=books[i].id%>" class="btn btn-dark">Add to
                            cart</button>
                        </div>
                        <%}%>
                      </form>
                  </div>
                </div>
                <%}%>
            </div>

            <nav aria-label="Page navigation example">
              <ul class="pagination justify-content-center">
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
              </ul>
            </nav>
      </div>
      <%}%>
    </div>
  </main>
  <script>
    function rememberedSearchtype(type){
      console.log(type);
      document.getElementById('searchtypeSelection').value=type;
    }
  </script>
