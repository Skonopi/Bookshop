<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/ion-rangeslider/2.3.1/css/ion.rangeSlider.min.css" />
  <link rel="stylesheet" href="stylesheets/main_page.css" />
</head>

<body>
  <header>
    <nav class="navbar navbar-dark bg-dark fixed-top">
      <div class="container-sm d-flex">
        <a class="navbar-brand">Bookshop</a>
        <form method="post">
          <div class="input-group align-self-stretch">
            <input class="form-control" type="search" name="searchbar" placeholder="search" value="<%=searchbar%>">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
          </div>
        </form>
        <button class="btn btn-outline-secondary" id="loginBtn">
          Log in
          <!-- <i class="bi-alarm" style="font-size: 1rem; color: cornflowerblue;"></i> -->
        </button>
        <button class="btn btn-outline-secondary" id="cartBtn">
          Cart
          <!-- <i class="bi-alarm" style="font-size: 1rem; color: cornflowerblue;"></i> -->
        </button>
      </div>
    </nav>
  </header>
  <main class="container">
    <div class="row">
      <!-- SEARCH FILTERS -->
      <div class="col-md-4 col-lg-3 order-md-1 mb-4">
        <h4 class="mb-2">Genre</h4>
        <!-- GENRES CHECK -->
        <form action="\filter?type=<%=searchtype%>&searchbar=<%=searchbar%>" method="POST">
          <% var checked="" ; %>
            <ul class="list-group list-group-flush mb-3">
              <% for(var i=0; i < genres.length; i++){%>
                <% if(checkedGenres.includes(genres[i].id)) { checked="checked" } else { checked="" }%>
                  <label class="list-group-item">
                    <input class="form-check-input me-1" type="checkbox" value="g-<%=genres[i].id%>"
                      id="genreCheck-<%=genres[i].id%>" name="genrefilter" <%=checked%>>
                    <%=genres[i].name%>
                  </label>
                  <%}%>
            </ul>

            <!-- EXPANDABLE LIST - TODO -->


            <!-- PUBLISHERS CHECK -->
            <h4 class="mb-2">Publisher</h4>
            <ul class="list-group list-group-flush mb-3">
              <% for(var i=0; i < publishers.length; i++){%>
                <% if(checkedPublishers.includes(publishers[i].id)) { checked="checked" } else { checked="" }%>
                  <label class="list-group-item">
                    <input class="form-check-input me-1" type="checkbox" value="g-<%=publishers[i].id%>"
                      id="genreCheck-<%=publishers[i].id%>" name="genrefilter" <%=checked%>>
                    <%=publishers[i].name%>
                  </label>
                  <%}%>
            </ul>

            <!-- PRIZE RANGE -->
            <h4 class="mb-2">Prize</h4>
            <div class="input-group mb-3">
              <input class="form-control" type="number" id="prize_min" placeholder="min" />
              <span class="input-group-text">-</span>
              <input class="form-control" type="number" id="prize_min" placeholder="max" />
              <span class="input-group-text">$</span>
            </div>
            <h4 class="mb-2">Publication date</h4>
            <div class="input-group mb-3">
              <input class="form-control" type="number" id="prize_min" placeholder="from" />
              <span class="input-group-text">-</span>
              <input class="form-control" type="number" id="prize_min" placeholder="to" />
              <span class="input-group-text">y</span>
            </div>
            <!-- <div class="range-slider">
                <input type="text" class="js-range-slider" value="" />
              </div>
              <div class="extra-controls">
                <input type="text" class="js-input-from" value="0" />
                <input type="text" class="js-input-to" value="0" />
              </div> -->
            <!--  -->
            <div class="d-flex justify-content-center">
              <button class="btn btn-outline-secondary" type="submit">Use</button>
            </div>
        </form>
      </div>

      <!-- GRID OF BOOKS -->
      <div class="col-md-8 col-lg-9 order-md-2">
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4">
          <% for(var i=0; i < books.length; i++){%>
            <div class="col d-flex align-items-stretch">
              <div class="card">
                <a href="/book?id=<%=books[i].id%>"><img src="<%=books[i].image_path%>" class="card-img-top"
                    alt="<%=books[i].image_path%>"></a>
                <div class="card-body">
                  <h6 class="card-title fw-bold">
                    <%=books[i].title%>
                  </h6>
                  <p class="card-subtitle mb-2 text-muted">
                    <%=books[i].author%>
                  </p>
                  <p class="card-text fw-bold">
                    <%=books[i].price%> $
                  </p>
                </div>
                <div class="card-footer d-flex align-items-stretch justify-content-center">
                  <button type="button" class="btn btn-dark">Add to cart</button>
                </div>
              </div>
            </div>
            <%}%>
        </div>

        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center">
            <li class="page-item">
              <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
              <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </main>


  <script>
    var filters = document.getElementsByName("filter");
    console.log(filters);
    var filter;
    filters.forEach(chck => {
      chck.addEventListener('change', function () {
        if (this.checked) {
          filter['filters.chck.id'] = true;
        } else {
          filter['filters.chck.id'] = true;
        }
      });
    });

  </script>

  <script>
    var loginBtn = document.getElementById("loginBtn");
    loginBtn.addEventListener('click', function () {
      console.log("LOG");
    });
  </script>
  <script>
    var cartBtn = document.getElementById("cartBtn");
    var loginBtn = document.getElementById("loginBtn");
    cartBtn.addEventListener('click', function () {
      console.log("CART");
      loginBtn.click();
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>


</body>

</html>