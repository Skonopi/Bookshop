<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/users_view.css">
    <title>Hello, world!</title>
</head>

<body>
    <header></header>
    <main class="container justify-content-center">
        <div>
            <h4>Filters</h4>
            <form method="POST">
                <div class="row">

                    <div class="col mb-3">
                        <label for="filterEmail">Email:</label>
                        <input class="form-control" type="text" id="filterEmail" name="filterEmail" placeholder="Email">
                    </div>
                    <div class="col mb-3">
                        <label for="filterNickname">Nickname:</label>
                        <input class="form-control" type="text" id="filterNickname" name="filterNickname"
                            placeholder="Nickname">
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-3"> <label for="filterName">Name:</label>
                        <input class="form-control" type="text" id="filterName" name="filterName" placeholder="Name">
                    </div>
                    <div class="col mb-3">
                        <label for="filterSurname">Surname:</label>
                        <input class="form-control" type="text" id="filterSurname" name="filterSurname"
                            placeholder="Surname">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="filterDate">Join date:</label>
                    <input class="form-control" type="date" id="filterDate" name="filterDate">
                </div>
                <div class="text-center">
                    <button class="btn btn-dark" type="submit">Submit</button>
                </div>
            </form>
        </div>
        <div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Email</th>
                        <th scope="col">Nickname</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Since</th>
                        <th scope="col"></th>
                        <!-- <th scope="col">Role</th> -->
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < users.length; i++){%>
                        <tr>
                            <th scope="row">
                                <%=users[i].id%>
                            </th>
                            <td>
                                <%=users[i].mail%>
                            </td>
                            <td>
                                <%=users[i].nickname%>
                            </td>
                            <td>
                                <%=users[i].name%>
                            </td>
                            <td>
                                <%=users[i].surname%>
                            </td>
                            <td>
                                <%=users[i].creation_date%>
                            </td>
                            <td>
                                <!-- <a href="">Delete</a> -->
                                <form method="POST" action="/deleteuser?id=<%=users[i].id%>">
                                    <button class="btn btn-dark" type="submit" >Delete</button>
                                </form>
                            </td>
                        </tr>
                        <%}%>
                </tbody>
            </table>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
    <script>
        (function keepFilters() {
            var email = document.getElementById('filterEmail');
            var nickname = document.getElementById('filterNickname');
            var name = document.getElementById('filterName');
            var surname = document.getElementById('filterSurname');
            var date = document.getElementById('filterDate');
            
            email.addEventListener('change', function () {
                sessionStorage.setItem('email_autosave', email.value);
            });
            nickname.addEventListener('change', function () {
                sessionStorage.setItem('nickname_autosave', nickname.value);
            });
            name.addEventListener('change', function () {
                sessionStorage.setItem('name_autosave', name.value);
            });
            surname.addEventListener('change', function () {
                sessionStorage.setItem('surname_autosave', surname.value);
            });
            date.addEventListener('change', function () {
                sessionStorage.setItem('date_autosave', date.value);
            });


            if (sessionStorage.getItem('email_autosave')) {
                email.value = sessionStorage.getItem('email_autosave');
            }
            if (sessionStorage.getItem('nickname_autosave')) {
                nickname.value = sessionStorage.getItem('nickname_autosave');
            }
            if (sessionStorage.getItem('name_autosave')) {
                name.value = sessionStorage.getItem('name_autosave');
            }
            if (sessionStorage.getItem('surname_autosave')) {
                surname.value = sessionStorage.getItem('surname_autosave');
            }
            if (sessionStorage.getItem('date_autosave')) {
                date.value = sessionStorage.getItem('date_autosave');
            }
            
        })();
    </script>
</body>

</html>