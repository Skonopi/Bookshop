<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/ion-rangeslider/2.3.1/css/ion.rangeSlider.min.css" />

</head>

<body>
  <header>
    <nav class="navbar bg-dark">
      <div class="container-sm d-flex">
        <a class="navbar-brand">Bookshop</a>
        <form>
          <div class="input-group align-self-stretch">
            <input class="form-control" type="search" method="post" name="searchbar" placeholder="search" value = "<%=keyword%>">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
          </div>
        </form>
        <button class="btn btn-outline-secondary">
          Log in
          <!-- <i class="bi-alarm" style="font-size: 1rem; color: cornflowerblue;"></i> -->
        </button>
        <button class="btn btn-outline-secondary">
          Cart
          <!-- <i class="bi-alarm" style="font-size: 1rem; color: cornflowerblue;"></i> -->
        </button>
      </div>
    </nav>
  </header>
  <main>
    <div class="container-sm">
      <div class="row">
        <div class="col-md-4 order-md-1 mb-4">
          <h4 class="mb-2">Genre</h4>
          <!-- genres checks -->
          <ul class="list-group list-group-flush mb-3">
            <% for(var i=0; i < Math.min(5, genres.length); i++){%>
              <label class="list-group-item">
                <input class="form-check-input me-1" type="checkbox" value="" id="genreCheck-<%=genres[i]%>">
                <%=genres[i]%>
              </label>
              <!-- <li class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="genreCheck-<%=genres[i]%>">
                <label class="form-check-label" for="genreCheck-<%=genres[i]%>">
                  <%=genres[i]%>
                </label>
              </li> -->
              <%}%>
          </ul>
          <% if(genres.length> 5){ %>
            <ul class="list-group mb-3 collapse" id="collapseGenres">
              <% for(var i=5; i < genres.length; i++){%>
                <li class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="genreCheck-<%=genres[i]%>">
                  <label class="form-check-label" for="genreCheck-<%=genres[i]%>">
                    <%=genres[i]%>
                  </label>
                </li>
                <%}%>
            </ul>
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseGenres"
              aria-expanded="false" aria-controls="collapseGenres">
              expand
            </button>
            <%}%>
              <!-- publishers checks -->
              <h4 class="mb-2">Publisher</h4>
              <ul class="list-group mb-3">
                <% for(var i=0; i < publishers.length; i++){%>
                  <li class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="publisherCheck-<%=publishers[i]%>">
                    <label class="form-check-label" for="publisherCheck-<%=publishers[i]%>">
                      <%=publishers[i]%>
                    </label>
                  </li>
                  <%}%>
              </ul>
              <!-- Prize range -->
              <!-- <div class="range-slider">
                <input type="text" class="js-range-slider" value="" />
              </div>
              <div class="extra-controls">
                <input type="text" class="js-input-from" value="0" />
                <input type="text" class="js-input-to" value="0" />
              </div> -->
              <!--  -->
        </div>
        <div class="col-md-8 order-md-2">
          <!-- grid of books -->
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
            <% for(var i=0; i < books.length; i++){%>
              <div class="col border text-center">
                <img src="<%=books[i].path%>" class="card-img-top" alt="<%=books[i].path%>">
                <div class="card-body">
                  <h5 class="card-title">
                    <%=books[i].title%>
                  </h5>
                  <h6 class="card-subtitle mb-2 text-muted">
                    <%=books[i].author%>
                  </h6>
                  <p class="card-text">
                    <%=books[i].price%> $
                  </p>
                  <button type="button" class="btn btn-dark">Add to cart</button>
                </div>
              </div>
              <%}%>
          </div>
          <!-- \grid of books -->
        </div>
      </div>

    </div>
    <!-- <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                  <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                      <span aria-hidden="true">&laquo;</span>
                    </a>
                  </li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                  <li class="page-item"><a class="page-link" href="#">2</a></li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                      <span aria-hidden="true">&raquo;</span>
                    </a>
                  </li>
                </ul>
            </nav> -->
  </main>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>

</body>

</html>