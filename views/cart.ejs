<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/cart_view.css" />
</head>

<body>
    <header></header>
    <main class="container">
        <div class="row">
            <!-- Order finalization -->
            <div class="col">
                <h3 class="my-3">Shipping address</h3>
                <form method="POST" class="needs-validation" novalidate>
                    <!-- <div class="row">
                        <div class="col mb-3">
                            <label for="inputZipPostalCode">Name</label>
                            <input class="form-control" type="text" id="inputName" name="inputName" required>
                            <div class="invalid-feedback">
                                Name required.
                            </div>
                        </div>
                        <div class="col mb-3">
                            <label for="inputZipPostalCode">Surname:</label>
                            <input class="form-control" type="text" id="inputSurname" name="inputSurname" required>
                            <div class="invalid-feedback">
                                Surname required.
                            </div>
                        </div>
                    </div> -->
                    <div class="mb-3">
                        <label for="inputAddress">Address:</label>
                        <input class="form-control" type="text" id="inputAddres" name="address"
                            aria-describedby="inputAddressHelp" placeholder="address line 1" required>
                        <small id="inputAddressHelp" class="form-text text-muted">Street address and number</small>
                        <div class="invalid-feedback">
                            Address required.
                        </div>
                    </div>

                    <!-- <div class="mb-3">
                        <label for="inputAddres2">Addres 2: <span class="text-muted">(Optional)</span></label>
                        <input class="form-control" type="text" id="inputAddres2" name="inputAddres2"
                            aria-describedby="inputAddres2Help" placeholder="addres line 2">
                        <small id="inputAddres2Help" class="form-text text-muted">Apartment, suite , unit, building,
                            floor, etc.</small>
                    </div> -->
                    <div class="mb-3">
                        <label for="inputZipPostalCode">Zip / Postal code:</label>
                        <input class="form-control" type="text" id="inputZipPostalCode" name="postalCode" required>
                        <div class="invalid-feedback">
                            Zip / Postal code required.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="inputCityTown">City / Town:</label>
                        <input class="form-control" type="text" id="inputCityTown" name="city" required>
                        <div class="invalid-feedback">
                            City / Town required.
                        </div>
                    </div>
                    <div>
                        <button class="btn btn-dark" type="submit">Place order</button>
                    </div>
                </form>

            </div>
            <!-- List of products -->
            <div class="col text-center">
                <!-- <div class="text-start">
                    <h4 class="my-3 ">Your cart</h4>
                    <span class="badge bg-secondary rounded-pill">3</span>
                </div> -->
                <h3 class="d-flex justify-content-between align-items-center my-3">
                    <span> Your cart</span>
                    <span class="badge bg-dark rounded-pill">
                        <%= order.products.length %> items
                    </span>
                </h3>
                <h4 class="d-flex justify-content-between align-items-center my-3">
                    <span class="text-muted">Total (USD):</span>
                    <span class="fw-bold text-muted">
                        <%=order.total_cost%>$
                    </span>
                </h4>
                <form>
                    <table class="table table-striped  align-middle table-hover">
                        <thead>
                            <tr>
                                <th scope="col" class="text-start">Book</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Price</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i < order.products.length; i++){%>
                                <tr>
                                    <th scope="row">
                                        <a href="/book?id=<%=order.products[i].book.id%>"><img class=" me-3"
                                                src=<%=order.products[i].book.image_path%> style="float:left" /></a>
                                        <p class="text-start">
                                            <a href="/book?id=<%=order.products[i].book.id%>">
                                                <%=order.products[i].book.title%>
                                            </a>
                                            </br>
                                            <%=order.products[i].book.author%>
                                        </p>
                                    </th>
                                    <td>
                                        <!-- <input class="form-control mx-auto" type="number" value="<%=order.products[i].quantity%>" /> -->
                                        <%=order.products[i].quantity%>
                                    </td>
                                    <td>
                                        <%=order.products[i].book.price%>$
                                    </td>
                                    <td>
                                        <form method="POST">
                                            <button class="btn btn-danger" type="submit">Remove</button>
                                        </form>
                                    </td>
                                </tr>
                                <%}%>
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
    <script src="scripts/formSubmission.js"></script>

</body>

</html>